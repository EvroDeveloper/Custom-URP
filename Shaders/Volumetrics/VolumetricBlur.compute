#pragma kernel VolBlurX VolBlur=VolBlurX 
#pragma kernel VolBlurY VolBlur=VolBlurY VERTICAL_PASS

#define TapSamples 3
//#define SIGMA_FILTER 1


RWTexture3D<float4> Result;
Texture3D<float4> InTex;

